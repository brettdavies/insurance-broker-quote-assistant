{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "maxSize": 5000000,
    "ignore": ["**/routeTree.gen.ts", "**/route-tree.gen.ts", "**/dist/**"]
  },
  "formatter": {
    "enabled": true,
    "ignore": ["**/*.tsx", "**/*.jsx"],
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingCommas": "es5"
    }
  }
}
